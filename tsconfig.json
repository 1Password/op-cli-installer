{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"types": ["node", "jest"],
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"]
}
